<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4d0ff"
    tools:context=".sellers.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/login_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">


        <!--  Todo make this recycler view with abilty to add category for Admin-->

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/tshirts" />

        <ImageView
            android:id="@+id/sports_shirts"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/sports" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/sweather" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <!--  Todo make this recycler view with abilty to add category for Admin-->

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/glasses" />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:src="@drawable/hats" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="89dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/shoess" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <!--  Todo make this recycler view with abilty to add category for Admin-->

        <ImageView
            android:id="@+id/headphoness_handfree"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/watches" />

        <ImageView
            android:id="@+id/mobilphones"
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:onClick="onClick"
            android:src="@drawable/mobiles" />


    </LinearLayout>

