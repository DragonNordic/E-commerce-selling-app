<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".sellers.SellerRegistrationActivity">

    <ImageView
        android:id="@+id/img_seller"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/seller_back" />

    <TextView
        android:id="@+id/title_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_seller"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Seller Registration Form"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_seller"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white">

        <EditText
            android:id="@+id/seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white">

        <EditText
            android:id="@+id/seller_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white">

        <EditText
            android:id="@+id/seller_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/seller_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:drawableTint="#FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_con_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_pass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/seller_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_reg_sell_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_con_pass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:hintEnabled="true"
        app:hintTextColor="@android:color/white">

        <EditText
            android:id="@+id/seller_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Address"
            android:inputType="textPostalAddress"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/seller_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_reg_sell_address"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttons"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/seller_already"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_register"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/addcartbtn"
        android:text="Already have an account ? "
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/seller_registration_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="invisible" />

</RelativeLayout>